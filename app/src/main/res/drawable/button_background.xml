<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item android:drawable="@android:color/transparent" />

    <!-- Border shape -->
    <item
        android:top="-1dp"
        android:right="-1dp"
        android:left="-1dp"
        android:bottom="-1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="#FFA500"
            />
        </shape>
    </item>
</layer-list>
